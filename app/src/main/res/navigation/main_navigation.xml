<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_news">

    <fragment
        android:id="@+id/navigation_news"
        android:name="com.example.mynba.ui.news.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_navigation_news_to_newsPageFragment"
            app:destination="@id/newsPageFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_games"
        android:name="com.example.mynba.ui.games.GamesFragment"
        android:label="Games"
        tools:layout="@layout/fragment_games" >
        <action
            android:id="@+id/action_navigation_games_to_gameMediaFragment"
            app:destination="@id/gameMediaFragment" />
        <action
            android:id="@+id/action_navigation_games_to_boxScoreFragment"
            app:destination="@id/boxScoreFragment" />
        <action
            android:id="@+id/action_navigation_games_to_gameStatusFragment"
            app:destination="@id/gameStatusFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_standings"
        android:name="com.example.mynba.ui.standings.StandingsFragment"
        android:label="Standings"
        tools:layout="@layout/fragment_standings" />
    <fragment
        android:id="@+id/gameStatusFragment"
        android:name="com.example.mynba.ui.gameStatus.GameStatusFragment"
        android:label="game_status_fragment"
        tools:layout="@layout/game_status_fragment" />
    <fragment
        android:id="@+id/newsPageFragment"
        android:name="com.example.mynba.ui.news.NewsPageFragment"
        android:label="news_page_fragment"
        tools:layout="@layout/news_page_fragment" />
    <fragment
        android:id="@+id/boxScoreFragment"
        android:name="com.example.mynba.ui.boxScore.BoxScoreFragment"
        android:label="box_score_fragment"
        tools:layout="@layout/box_score_fragment" />
    <fragment
        android:id="@+id/gameMediaFragment"
        android:name="com.example.mynba.ui.gameMedia.GameMediaFragment"
        android:label="game_media_fragment"
        tools:layout="@layout/game_media_fragment" />


    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.mynba.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_signup"
            app:destination="@id/signUpFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_navigation_news"
            app:destination="@id/navigation_news" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.mynba.ui.signup.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up">
        <action
            android:id="@+id/action_signup_to_login"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>



</navigation>