<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/away_logo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/away_team_logo" />

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="@string/home_team_logo" />

    <TextView
        android:id="@+id/v_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="30dp"
        tools:text="112"
        app:layout_constraintEnd_toStartOf="@+id/game_Status"
        app:layout_constraintStart_toEndOf="@+id/away_logo"
        tools:layout_editor_absoluteY="45dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/game_Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/v_score"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="36dp"
        tools:text="sssss" />

    <TextView
        android:id="@+id/h_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="15dp"
        tools:text="120"
        app:layout_constraintEnd_toStartOf="@+id/home_logo"
        app:layout_constraintStart_toEndOf="@+id/game_Status"
        tools:layout_editor_absoluteY="48dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>